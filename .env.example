# ============================================
# Fully Autonomous Mobile System - Environment
# ============================================
# Copy this file to .env and fill in the values.

# --- Database ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=changeme_strong_password
DB_NAME=app_db
DB_SSLMODE=disable

# --- JWT ---
JWT_SECRET=changeme_minimum_32_characters_long_random_string
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# --- Server ---
PORT=8080
CORS_ORIGINS=http://localhost:8081

# --- RevenueCat ---
REVENUECAT_WEBHOOK_AUTH=Bearer your_revenuecat_webhook_auth_secret

# --- Mobile ---
EXPO_PUBLIC_API_URL=http://localhost:8080/api
EXPO_PUBLIC_REVENUECAT_KEY=appl_your_ios_revenuecat_api_key

# ============================================
# Orchestrator Configuration
# ============================================

# --- Engine Agent (Planning) ---
# Uses DeepSeek or GLM-4 for generating implementation plans
ENGINE_API_KEY=your_deepseek_or_glm_api_key
ENGINE_API_URL=https://api.deepseek.com/v1/chat/completions
ENGINE_MODEL=deepseek-chat

# --- Executioner Agent (Code Writing) ---
# Mode: "api" (default, cost-effective) or "cli" (Claude CLI, expensive)
EXECUTIONER_MODE=api

# For API mode - GLM-4, DeepSeek, or any OpenAI-compatible API
EXECUTIONER_API_KEY=your_glm_or_deepseek_key
EXECUTIONER_API_URL=https://open.bigmodel.cn/api/paas/v4/chat/completions
EXECUTIONER_MODEL=glm-4-0520

# Timeout in seconds (default: 600)
EXECUTIONER_TIMEOUT=600

# --- Debugger Agent (Error Analysis) ---
DEBUGGER_API_KEY=your_deepseek_api_key
DEBUGGER_API_URL=https://api.deepseek.com/v1/chat/completions
DEBUGGER_MODEL=deepseek-chat

# --- Project Paths ---
PROJECT_ROOT=..
TASK_FILE=../task_list.json

# --- Logging ---
# Directory for detailed task execution logs (optional)
LOG_DIR=./logs

# --- Git-Claw (Auto-commit) ---
# Set to "true" to auto-commit after each successful task
AUTO_COMMIT=false

# ============================================
# Coolify Deployment
# ============================================
COOLIFY_URL=https://your-coolify-instance.com
COOLIFY_TOKEN=your_coolify_api_token
COOLIFY_SERVER_UUID=your_server_uuid
COOLIFY_PROJECT_UUID=your_project_uuid
APP_UUID=your_application_uuid_from_coolify

# ============================================
# GitHub (for Git-Claw)
# ============================================
GITHUB_PAT=your_github_personal_access_token
